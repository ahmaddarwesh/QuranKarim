<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".alamat_dabt" android:background="@color/cardview_light_background" android:id="@+id/const_az">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/almat"
            android:id="@+id/img_mostalahat"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:visibility="gone"/>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/scr">
        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                      android:orientation="vertical" android:padding="5dp" android:gravity="center">
            <TextView
                    android:text="الرقية الشرعية - من السحر والمس والعين والحسد"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txet1" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="25dp" app:layout_constraintTop_toTopOf="parent" android:textSize="24sp"
                    android:textColor="@color/cardview_dark_background" android:fontFamily="@font/th"
            />
            <TextView
                    android:text="السلام "
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/text2" android:textSize="20sp"
                    android:padding="5dp"
                    android:textColor="@color/cardview_dark_background" android:layout_marginTop="10dp"
            />
        </LinearLayout>
    </ScrollView>
    <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="44dp" app:layout_constraintStart_toEndOf="@+id/sett"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="1dp"
            android:background="@android:color/holo_blue_dark" android:padding="2dp" android:id="@+id/sett_cons"
            android:visibility="gone">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="0dp" app:srcCompat="@drawable/ic_zoom_out_black_24dp"
                android:id="@+id/img_zo_out"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintBottom_toBottomOf="parent"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="0dp" app:srcCompat="@drawable/ic_zoom_in_black_24dp"
                android:id="@+id/img_zo_in"
                app:layout_constraintEnd_toStartOf="@+id/img_zo_out" android:layout_marginEnd="8dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
        />
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="0dp" app:srcCompat="@drawable/ic_wb_sunny_black_24dp"
                android:id="@+id/img_mod" app:layout_constraintEnd_toStartOf="@+id/img_zo_in"
                android:layout_marginEnd="8dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
        />
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="0dp" app:srcCompat="@drawable/ic_share_black_24dp"
                android:id="@+id/img_share" app:layout_constraintEnd_toStartOf="@+id/img_mod"
                android:layout_marginEnd="8dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"/>
    </android.support.constraint.ConstraintLayout>
    <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp" app:srcCompat="@drawable/ic_settings_black_24dp"
            android:id="@+id/sett" android:background="@color/cardview_shadow_start_color"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
    />
</android.support.constraint.ConstraintLayout>