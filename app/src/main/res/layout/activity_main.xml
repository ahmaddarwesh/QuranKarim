<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:id="@+id/cons_main">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="254dp" app:srcCompat="@drawable/logo_quran"
            android:id="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"
            android:padding="10dp" android:background="@drawable/back_trans"/>
    <Button
            android:text="القرآن الكريم"
            android:layout_width="239dp"
            android:layout_height="wrap_content"
            android:id="@+id/quran"
            android:background="@drawable/backg_tv_blue" android:textColor="@color/cardview_light_background"
            android:textSize="30sp" android:fontFamily="@font/th"
            android:layout_marginEnd="10dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView" app:layout_constraintHorizontal_bias="0.511"
            android:textStyle="bold" android:padding="10dp" android:drawableLeft="@drawable/ic_quran"/>
    <Button
            android:text="الرقية الشرعية"
            android:layout_width="192dp"
            android:layout_height="wrap_content"
            android:id="@+id/Azkar"
            android:background="@drawable/backg_tv_blue" android:textColor="@color/cardview_light_background"
            android:fontFamily="@font/th" android:textSize="24sp" android:textStyle="bold"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/quran"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:drawableLeft="@drawable/ic_remove_red_eye_black_24dp"
            android:padding="5dp"/>
    <Button
            android:text="المصطلحات"
            android:layout_width="192dp"
            android:layout_height="wrap_content" android:id="@+id/mstlhat"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/Azkar" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:background="@drawable/backg_tv_blue"
            android:fontFamily="@font/th" android:textSize="24sp" android:textStyle="bold"
            android:textColor="@color/cardview_light_background"
            android:drawableLeft="@drawable/ic_lightbulb_outline_black_24dp"/>
    <Button
            android:text="الإعدادات"
            android:layout_width="192dp"
            android:layout_height="wrap_content"
            android:id="@+id/Setting"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:background="@drawable/backg_tv_blue"
            android:textColor="@color/cardview_light_background" android:textStyle="bold"
            android:drawableLeft="@drawable/ic_settings_black_24dp" android:padding="5dp" android:textSize="24sp"
            android:textAllCaps="true" android:drawablePadding="5dp"
            android:fontFamily="@font/th" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/mstlhat"/>
    <TextView
            android:text="ِحول المطور"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/about" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent" android:textSize="18sp"
            android:textColor="@color/colorPrimary" android:textStyle="bold"/>
</android.support.constraint.ConstraintLayout>