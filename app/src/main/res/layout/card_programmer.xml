<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_height="wrap_content" android:layout_width="300dp">

    <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" app:cardElevation="7dp">
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:text="Ahmad Darwesh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView10"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                    android:textStyle="bold" android:textColor="@color/cardview_dark_background"
                    android:textSize="30sp" android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                    android:text="Who is Ahmad Darwesh?"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView11" android:layout_marginTop="32dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView10" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp" android:textSize="18sp"
                    android:textColor="@color/colorPrimaryDark"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="39dp"
                    android:id="@+id/textView12"
                    android:text="Programmer and developer of smartphone applications and software designer"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView11" android:layout_marginTop="4dp"
                    android:layout_marginStart="32dp" app:layout_constraintEnd_toEndOf="parent"
                    android:textSize="15sp"/>
            <TextView
                    android:text="Contact us:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView13" android:layout_marginTop="32dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView12" android:textColor="@color/colorPrimaryDark"
                    android:textSize="18sp" android:layout_marginStart="16dp"
                    app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView15"
                    app:layout_constraintTop_toBottomOf="@+id/textView13" android:layout_marginTop="4dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
                    android:text="Ahmad@programmer.net" android:textSize="15sp"/>
            <TextView
                    android:text="+96171085998"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView16" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="32dp" app:layout_constraintTop_toBottomOf="@+id/textView15"
                    android:textSize="15sp"
            />
            <TextView
                    android:text=" الحقوق محفوظة محفوظة©"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView8" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="32dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView16" app:layout_constraintVertical_bias="1.0"
                    android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
                    android:textStyle="bold" android:textColor="@android:color/holo_blue_dark"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>